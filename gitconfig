# vim: set ft=gitconfig:

[branch]
    autoSetupRebase = always
    autoSetupMerge = always # controls whether git branch and git checkout -b imply the --track option

[core]
    pager = delta
    diff = delta
    log = delta
    reflog = delta
    show = delta
    editor = nvim

[commit]
    verbose = true

[delta]
    features = unobtrusive-line-numbers decorations
    plus-style = syntax 22
    plus-emph-style = syntax bold 28
    navigate = true

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-left-style = 39
    line-numbers-right-style = 39

[delta "decorations"]
    commit-decoration-style = bold yellow
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = box 39

[interactive]
    diffFilter = delta --color-only

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = red

[push]
    default = current

[pull]
	rebase = true

[merge]
	ff = false

[alias]
    empty = commit -m 'Empty commit' --allow-empty
    unpush = reset --hard HEAD~1
    uncommit = reset --soft HEAD~1
    unstage = restore --staged *
    co = checkout
    main-branch = !git symbolic-ref refs/remotes/origin/HEAD | cut -d'/' -f4
    com = "!f(){ git checkout $(git main-branch) $@;}; f"
    fomo = !git fetch origin $(git main-branch) && git rebase origin/$(git main-branch)

[includeIf "gitdir:~/dotfiles/"]
  path = ~/.gitconfig.local

[includeIf "gitdir:~/wotfiles/"]
  path = ~/.gitconfig.work

[includeIf "gitdir:~/go/"]
  path = ~/.gitconfig.work

[includeIf "gitdir:~/go/src/github.com/apeduru/"]
  path = ~/.gitconfig.local

[includeIf "gitdir:~/journal/"]
  path = ~/.gitconfig.local

[includeIf "gitdir:~/src/"]
  path = ~/.gitconfig.work

[includeIf "gitdir:~/src/github.com/apeduru/"]
  path = ~/.gitconfig.local
